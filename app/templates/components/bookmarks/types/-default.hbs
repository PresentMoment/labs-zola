<h3>
  {{humanize-dasherized-words this.bookmarkType}}
</h3>
<ul class="no-bullet">
  {{#each this.items as |item|}}
    <li class="list-item-bookmark">
      {{#link-to (concat 'map-feature.' this.bookmarkType) item.bookmark.id}}
        <span class="icon polygon"></span>
        {{item.bookmark.title}}
        <span class="dark-gray">
          {{item.bookmark.subtitle}}
        </span>
      {{/link-to}}
      <button
        class="float-right lu-red delete-bookmark-button"
        {{action this.deleteBookmark item}}
      >
        &times;
      </button>
    </li>
  {{/each}}
</ul>
